<%= link_to speaker.profile_url do %>
   <div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
    <div class="flex flex-col items-center pb-10">
        <%= image_tag speaker.profile_image_url, class:"w-24 h-24 mb-3 rounded-full shadow-lg" %>
        <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%= "#{speaker.first_name} #{speaker.last_name}" %></h5>
        <span class="text-sm text-gray-500 dark:text-gray-400"><%= I18n.t('.speaker.role') %>: <%= speaker.role %></span>
    </div>
</div> 
<% end %>