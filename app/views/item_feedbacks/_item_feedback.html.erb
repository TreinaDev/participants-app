<%= link_to my_event_schedule_item_item_feedback_path(my_event_id: item_feedback.event_id, schedule_item_id:item_feedback.schedule_item.schedule_item_id, id: item_feedback.id), class: "block" do %>
  <h3 class="text-2xl font-bold text-gray-900"><%= item_feedback.title %></h3>
  <p class="text-gray-600 text-sm mt-2">
    <%= t('.created_by') %> <span class="font-medium text-gray-800"><%= item_feedback.user.full_name %></span> <%= t('.in') %> 
    <span class="text-gray-500"><%= l(item_feedback.created_at, format: :short) %></span>
  </p>
  <p class="text-gray-600 text-sm mt-2">
    <%= I18n.t('schedule_item.one') %>: <span class="font-medium text-gray-800"><%= item_feedback.schedule_item.name %> </span>
  </p>
  <p class="text-gray-600 text-sm mt-2">
    <%= ItemFeedback.human_attribute_name :mark %>: <span class="font-medium text-gray-800"><%= item_feedback.mark %></span>
  </p>
  <span class="text-amber-500"><%= ItemFeedback.model_name.human %></span>
<% end %>
