      <p class="text-gray-600 text-sm mt-2">
        <%= ItemFeedback.human_attribute_name :mark %>: <span class="font-medium text-gray-800"><%= feedback.mark %></span>
      </p>
      <p> <%= ItemFeedback.model_name.human %> <%= feedback.public ? t('.public') : t('.anonymous') %> </p>
    <% end %>
  </li>
<% end %>