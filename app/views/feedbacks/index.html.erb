<%= page_title(t('.title')) %>

<% @feedbacks.each do |feedback| %>
  <li class="bg-white shadow-md rounded-lg transition hover:shadow-lg px-6 py-4 border-l-4  flex flex-col" id="<%= dom_id(feedback) %>">            
    <%= link_to my_event_feedback_path(my_event_id: feedback.event_id, id: feedback.id), class: "block" do %>
      <h3 class="text-2xl font-bold text-gray-900"><%= feedback.title %></h3>
      <%= I18n.t('event.one') %>: <span class="font-medium text-gray-800"><%= @event.name %></span>
      <p class="text-gray-600 text-sm mt-2">
        <%= t('.created_by') %> <span class="font-medium text-gray-800"><%= feedback.user.full_name %></span> <%= t('.in') %> 
        <span class="text-gray-500"><%= l(feedback.created_at, format: :short) %></span>
      <p class="text-gray-600 text-sm mt-2">
        <%= Feedback.human_attribute_name :mark %>: <span class="font-medium text-gray-800"><%= feedback.mark %></span>
      </p>
      <p> <%= Feedback.model_name.human %> <%= feedback.public ? t('.public') : t('.anonymous') %> </p>
    <% end %>
  </li>
<% end %>
</br>
<% @item_feedbacks.each do |feedback| %>
