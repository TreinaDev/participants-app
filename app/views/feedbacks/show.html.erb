<div class='ml-6 mt-9'>
  <%= button_to_back %>
</div>

<div class="max-w-3xl mx-auto p-6 bg-white shadow-lg rounded-lg flex justify-between border-x mb-3">
  <div> 
    <div class="prose prose-lg text-gray-700">
      <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= page_title(@feedback.title) %></h1>
      <%= @feedback.comment %>
    </div>
    <p class="text-gray-600 text-sm mt-2">
        <%= Feedback.human_attribute_name :mark %>: <span class="font-medium text-gray-800"><%= @feedback.mark %></span>
    </p>
    <%= t('.created_by') %> <span class="font-medium text-gray-800"><%= @feedback.user.full_name %></span>
  </div>
</div>
