
 <div data-controller="tabs" class="flex justify-center space-x-2 min-h-screen p-6">
 <!-- Sidebar -->
    <aside class="w-64 border-2 border-violet-200 rounded-lg">
      <% if @event.banner.present? %>
        <img class="rounded-t-lg object-cover w-full h-20" src="<%= @event.banner %>" alt="Banner do evento">
      <% end %>
      <div class="p-4">
        <div class="flex items-center space-x-4">
          <% if @event.logo.present? %>
            <img class="w-12 h-12 mb-3 rounded-full" src="<%= @event.logo %>" alt="Logo do evento"/>
          <% end %>
          <h5 class="mb-2 text-sm font-bold tracking-tigh text-black"><%= @event.name %></h5>
        </div>
      </div>
      <nav class="flex flex-col space-y-2">
          <button class="tab-link text-left mx-4 px-4 py-2 text-violet-600 rounded-lg hover:bg-violet-200" data-tab="tab1">
              Dashboard
          </button>
          <button class="tab-link text-left mx-4 px-4 py-2 text-violet-600 rounded-lg hover:bg-violet-200" data-tab="tab2">
              Agenda
          </button>
          <button class="tab-link text-left mx-4 px-4 py-2 text-violet-600 rounded-lg hover:bg-violet-200" data-tab="tab3">
              Feed
          </button>
          <button class="tab-link text-left mx-4 px-4 py-2 text-violet-600 rounded-lg hover:bg-violet-200" data-tab="tab4">
              Ingressos
          </button>
      </nav>
    </aside>

    <!-- ConteÃºdo principal -->
    <div class="flex-1 p-6 border-2 border-violet-200 rounded-lg">
        <div class="tab-content" id="tab1">
          <h2 class="h2-dashbord">Dashboard</h2>
          <%= render 'dashboard_event', announcements: @announcements, posts: @posts, event: @event,  tickets_by_batch_id: @tickets_by_batch_id %>
        </div>
        
        <div class="tab-content hidden" id="tab2">
          <h2 class="h2-dashbord">Agenda</h2>
          <%= render 'agenda', event: @event %>
        </div>

        <div class="tab-content hidden" id="tab3">
          <h2 class="h2-dashbord">Feed</h2>
          <%= render 'feed', announcements: @announcements, posts: @posts, event: @event  %>
        </div>

        <div class="tab-content hidden" id="tab4">
          <h2 class="h2-dashbord">Ingressos</h2>
          <p class="mb-8 py-6 max-w-2xl text-sm text-gray-800">Ingressos que possui para este evento.</p>
          <%= render 'my_ticket', tickets_by_batch_id: @tickets_by_batch_id, event: @event, batches: @batches %>
        </div>
    </div>
</div>
