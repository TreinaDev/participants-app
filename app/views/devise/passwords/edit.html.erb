<h2><%=t('.title')%></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nova Senha" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%=t('.min_character', count: @minimum_password_length)%>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "nova-senha" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nova-senha" %>
  </div>

  <div class="actions">
    <%= f.submit t('.save') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
