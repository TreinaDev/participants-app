<h1 class="text-3xl font-extrabold text-center dark:text-black mt-8 mb-6"><%=t('.title')%></h1>

<% if @favorites.present? %>
  <div class="container mx-auto">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @favorites.each do |event| %>
        <div id="event_id_<%=event.event_id%>" class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <%= render '/events/event', event: event %>       
          <%= button_to 'Desfavoritar', favorite_path(Favorite.find_by(event_id: event.event_id)), method: :delete, class: 'focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900' %> 
        </div>    
      <% end %> 
    </div>
  </div>
<% else %>
  <p class="text-lg text-center text-gray-500 dark:text-black-300 mt-6"><%=t('.no_favorites')%></p>
<% end %>
