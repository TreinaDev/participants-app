<% if event.banner.present? %>
<img class="rounded-t-lg object-cover w-full h-32" src="<%= event.banner %>" alt="Banner do evento">
<% end %>
<div class="p-4">
  <div class="flex items-center space-x-4">
    <% if event.logo.present? %>
      <img class="w-20 h-20 mb-3 rounded-full" src="<%= event.logo %>" alt="Logo do evento"/>
    <% end %>
    <h5 class="mb-2 text-2xl font-bold tracking-tigh text-black"><%= link_to event.name, event_path(event.event_id) %></h5>
  </div>
  <p class="text-md text-black mt-4"><%=t('.start_date')%>:  <%=I18n.l(event.start_date.to_date, format: :long)%></p>
</div>
