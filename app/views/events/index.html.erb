<h1 class="text-3xl font-extrabold text-center dark:text-black mt-8 mb-6"><%= t('.available_events') %></h1> 

<% if @events.present? %>
  <div class="container mx-auto">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">      
      <% @events.each do |event| %>
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <%= render '/events/event', event: event %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p class="text-lg text-center text-gray-500 dark:text-black-300 mt-6">Nenhum evento disponÃ­vel</p>
<% end %>
