<!-- Timeline -->
<div class="pb-8">
  <% if event.schedules.empty? %>
    <p class="mt-4 text-gray-600"><%= t('.no_schedule') %></p>
  <% else %>
    <% event.schedules.each do |schedule| %>
      <% unless schedule.schedule_items.empty? %>
        <!-- Heading -->
        <div class="ps-2 my-2 first:mt-0 mt-8">
          <h3 class="font-bold text-xl text-gray-600">
            <%= I18n.l(schedule.date) %>
          </h3>
        </div>
        <!-- End Heading -->

        <!-- Grid Layout -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
          <% schedule.schedule_items.each do |item| %>
            <!-- Item -->
            <div class="flex gap-x-3 bg-white p-4 rounded-lg shadow-md">
              <!-- Left Content -->
              <div class="w-16 text-end">
                <span class="text-sm text-gray-800">
                  <%= item.start_time %>
                </span>
              </div>
              <!-- End Left Content -->

              <!-- Icon -->
              <div class="relative last:after:hidden after:absolute after:top-7 after:bottom-0 after:start-3.5 after:w-px after:-translate-x-[0.5px] after:bg-gray-200 dark:after:bg-gray-700">
                <div class="relative z-10 size-7 flex justify-center items-center">
                  <div class="size-2 rounded-full bg-gray-400 dark:bg-gray-600"></div>
                </div>
              </div>
              <!-- End Icon -->

              <!-- Right Content -->
              <div class="grow pt-0.5">
                <h3 class="flex gap-x-1.5 text-lg font-semibold text-violet-800">
                  <svg class="shrink-0 size-4 mt-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" x2="8" y1="13" y2="13"></line>
                    <line x1="16" x2="8" y1="17" y2="17"></line>
                    <line x1="10" x2="8" y1="9" y2="9"></line>
                  </svg>
                  <%= item.name %>
                </h3>
                <p class="text-sm text-gray-600"><span class="font-bold"><%= I18n.t('schedule.responsible_email') %>:</span> <%= item.responsible_email %></p>
                <p class="text-sm text-gray-600"><span class="font-bold"><%= I18n.t('schedule.responsible_name') %>:</span> <%= item.responsible_name %></p>
                <p class="text-sm text-gray-600"><span class="font-bold"><%= I18n.t('schedule.schedule_type') %>:</span> <%=  I18n.t("schedule.schedule_types.#{item.schedule_type}") %></p>
                <p class="mt-1 -ms-1 p-1 inline-flex items-center text-sm text-gray-600">
                  <span class="font-bold"><%= I18n.t('schedule.duration') %>: </span> <%= item.duration %>min
                </p>
              </div>
              <!-- End Right Content -->
            </div>
            <!-- End Item -->
          <% end %>
        </div>
        <!-- End Grid Layout -->
      <% end %>
    <% end %>
  <% end %>
</div>
<!-- End Timeline -->
