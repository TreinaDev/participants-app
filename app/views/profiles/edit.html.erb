<div class='flex item-center justify-center'>
  <div class="relative p-4 flex flex-col item-center justify-center shadow-sm border border-purple-900 w-100 rounded-lg my-6">
    <div class="relative flex flex-col rounded-xl bg-transparent">
      <%= form_title(t('.title')) %>
      <%= form_with(model: [@user, @profile], class: 'mt-8 mb-2 w-80 max-w-screen-lg sm:w-96') do |f| %>
        <div class="mb-1 flex flex-col gap-6">
          <div class="w-full">
            <%= f.label :city, class: 'form-label' %>
            <%= f.text_field :city, class: 'form-field' %>
          </div>

          <div class="w-full">
            <%= f.label :state, class: 'form-label' %>
            <%= f.text_field :state, class: 'form-field' %>
          </div>

          <div class="w-full">
            <%= f.label :phone_number, class: 'form-label' %>
            <%= f.text_field :phone_number, class: 'form-field' %>
          </div>
        </div>
        <div class="actions my-5">
          <%= f.submit t('.save'), class: 'btn-login' %>
        </div>
        <div class="actions my-5 flex">
          <%= link_to t('.back'), user_profile_path(user_id: @user.id, id: @profile.id), class: "btn-back" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
